<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nowy produkt do sypania"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/green_900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title">

        <EditText
            android:id="@+id/new_entry_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="10dp"
            android:ems="10"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edittext_rounded_background"
            android:layout_weight=".5"
            android:inputType="textCapWords"
            android:hint="Nazwa produktu"
            tools:text="Nazwa produktu" />

        <RadioGroup
            android:id="@+id/urgency_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center_horizontal">

            <RadioButton
                android:id="@+id/urgent_radio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pilne" />

        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RadioGroup
        android:id="@+id/grammage_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first">

        <RadioButton
            android:id="@+id/radio_button_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500g" />

        <RadioButton
            android:id="@+id/radio_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1kg" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fc6d85"
        android:text="@string/anuluj"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grammage_group" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_confirm"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#73ff99"
        android:text="@string/zatwierdz"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grammage_group" />

</androidx.constraintlayout.widget.ConstraintLayout>